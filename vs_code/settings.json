{
  "editor.tabSize": 3,
  "editor.fontSize": 14,
  "editor.wordWrap": "on",
  "editor.linkedEditing": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.accessibilitySupport": "off",
  "breadcrumbs.enabled": false,
  "window.commandCenter": false,
  "chat.commandCenter.enabled": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.external.osxExec": "Ghostty.app",
  "workbench.colorCustomizations": {
    "terminal.ansiBlack": "#262427",
    "terminal.ansiRed": "#ff7272",
    "terminal.ansiGreen": "#bcdf59",
    "terminal.ansiYellow": "#ffca58",
    "terminal.ansiBlue": "#49cae4",
    "terminal.ansiMagenta": "#a093e2",
    "terminal.ansiCyan": "#aee8f4",
    "terminal.ansiWhite": "#fcfcfa",
    "terminal.ansiBrightBlack":"#545452",
    "terminal.ansiBrightRed": "#ff8787",
    "terminal.ansiBrightGreen": "#c6e472",
    "terminal.ansiBrightYellow": "#ffd271",
    "terminal.ansiBrightBlue": "#64d2e8",
    "terminal.ansiBrightMagenta": "#aea3e6",
    "terminal.ansiBrightCyan": "#baebf6",
    "terminal.ansiBrightWhite": "#fcfcfa",
    "terminal.foreground": "#fcfcfa",
    "terminal.selectionBackground": "#787b90",
    "terminal.selectionForeground": "#cdd6f4"
  },
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/*.class": true,
    "**/*.exe": true
  },

  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": false,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.executorMap": {
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt -std=c++17 && $dir$fileNameWithoutExt",
    "python": "python -u",
    "shellscript": "/bin/zsh",
    "javascript": "node",
    "typescript": "ts-node",
  },
  "code-runner.languageIdToFileExtensionMap": {
    "typescript": ".ts"
  },
  "redhat.telemetry.enabled": false
}