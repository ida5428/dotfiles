// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
   "minimap": {
      "show": "never"
   },
   "linked_edits": true,
   "show_whitespaces": "none",
   "tab_size": 3,
   "cursor_blink": true,
   "terminal": {
      "blinking": "on",
      "cursor_shape": "bar",
      "font_family": "JetBrainsMono Nerd Font Mono",
      "font_size": 14.0,
      "button": false,
      "toolbar": {
         "breadcrumbs": false
      }
   },
   "icon_theme": "Catppuccin Mocha",
   "base_keymap": "VSCode",
   "telemetry": {
      "metrics": false,
      "diagnostics": false
   },
   "ui_font_size": 16,
   "buffer_font_size": 14.0,
   "theme": {
      "mode": "system",
      "light": "Catppuccin Mocha (Blur)",
      "dark": "Catppuccin Mocha (Blur)"
   },
   "toolbar": {
      "breadcrumbs": false,
      "quick_actions": false,
      "selections_menu": false
   },
   "soft_wrap": "editor_width",
   "collaboration_panel": {
      "button": false
   },
   "notification_panel": {
      "button": false
   },
   "agent": {
      "version": "1",
      "button": false
   },
   "format_on_save": "off",
   "ensure_final_newline_on_save": false,
   "file_scan_exclusions": [
      "**/.git",
      "**/.svn",
      "**/.hg",
      "**/.jj",
      "**/CVS",
      "**/.DS_Store",
      "**/Thumbs.db",
      "**/.classpath",
      "**/.settings",
      "**/**.class",
      "**/**.exe"
   ]
}
