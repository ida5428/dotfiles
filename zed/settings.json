// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
   "vim_mode": true,
   "relative_line_numbers": true,
   "minimap": {
      "show": "never"
   },
   // "buffer_font_family":"",
   "linked_edits": true,
   "show_whitespaces": "none",
   "tab_size": 3,
   "cursor_blink": true,
   "terminal": {
      "blinking": "on",
      "cursor_shape": "bar",
      "font_size": 14.0,
      "button": false,
      "toolbar": {
         "breadcrumbs": false
      },
      "shell": {
         "program": "fish"
      }
   },
   "base_keymap": "VSCode",
   "telemetry": {
      "metrics": false,
      "diagnostics": false
   },
   "ui_font_size": 16,
   "buffer_font_size": 14.0,
   "buffer_font_features": {
     "calt": false
   },
   "theme": {
      "mode": "system",
      "light": "ida theme",
      "dark": "ida theme"
   },
   "icon_theme": "Material Icon Theme",
   "toolbar": {
      "breadcrumbs": false,
      "quick_actions": false,
      "selections_menu": false
   },
   "soft_wrap": "editor_width",
   "collaboration_panel": {
      "button": false
   },
   "notification_panel": {
      "button": false
   },
   "agent": {
      "button": false
   },
   "format_on_save": "off",
   "disable_ai": true,
   "tab_bar": {
      "show_nav_history_buttons": false
   },
   "tabs": {
      "file_icons": true,
      "git_status": true
   },
   "project_panel": {
      "indent_size": 12
   }
}
